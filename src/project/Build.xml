<xml>
	
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
	
	<files id="common">
		<compilerflag value="-Iinclude"/>
		<file name="common/ExternalInterface.cpp"/>
	</files>

	<files id="ios">
		<compilerflag value="-Iinclude"/>
		<compilerflag value="-Iafnetwork_include"/>
		<set name="IPHONE_VER" value="7.0" />

		<file name="afnetwork/AFHTTPRequestOperation.m"/>
		<file name="afnetwork/AFHTTPRequestOperationManager.m"/>
		<file name="afnetwork/AFHTTPSessionManager.m"/>
		<file name="afnetwork/AFNetworkReachabilityManager.m"/>
		<file name="afnetwork/AFSecurityPolicy.m"/>
		<file name="afnetwork/AFURLConnectionOperation.m"/>
		<file name="afnetwork/AFURLRequestSerialization.m"/>
		<file name="afnetwork/AFURLResponseSerialization.m"/>
		<file name="afnetwork/AFURLSessionManager.m"/>

		<file name="ios/HttpLoader.mm"/>
	</files>
	
	<set name="SLIBEXT" value=".lib" if="windows"/>
	<set name="SLIBEXT" value=".a" unless="windows"/>
	<set name="SLIBEXT" value=".so" if="webos"/>
	
	<set name="DEBUGEXTRA" value="-debug" if="fulldebug" />
	
	<target id="NDLL" output="${LIBPREFIX}mloader${MSVC_LIB_VERSION}${DEBUGEXTRA}${LIBEXTRA}" 
		tool="linker" toolid="${STD_MODULE_LINK}">
		
		<outdir name="../ndll/${BINDIR}"/>
		<ext value=".ndll" if="windows || mac || linux"/>
		<files id="common"/>
		<files id="ios" if="iphone"/>
	</target>
	
	<target id="default">
		<target id="NDLL"/>
	</target>
	
</xml>
